<div class="row">
  <div class="cool-sm-6 col-md-4 col-md-offset-4 col-sm-offset3">
    <div id="success" class="alert alert-success" {{#if noMessages}} hidden{{/if}}> {{successMsg}} </div> </div> </div>
      {{# each products }} <div class="row mt-5">
      {{# each this }}
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img class="img-responsive" src="{{ this.imagePath }}" alt="breakfast at acropolis" width="300px">
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <p class="description">{{ this.description }}</p>
            <div class="container d-flex clearfix">
              <div class="price">${{ this.price }}</div>
              <a href="/add-to-cart/{{this._id}}" class="btn btn-success ml-auto" role="button">Add to Shopping Cart</a>
            </div>

          </div>
        </div>
      </div>
      {{/each}}

    </div>
    {{/each}}